{
  "name": "aoc2025",
  "version": "1.0.0",
  "description": "My solutions for Advent of Code 2025",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "check": "npm run lint && npm run build",
    "check:fix": "npm run lint:fix && npm run build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run build && tsx src/index.ts",
    "day01": "tsx src/day01.ts",
    "day02": "tsx src/day02.ts",
    "day03": "tsx src/day03.ts",
    "day04": "tsx src/day04.ts",
    "day05": "tsx src/day05.ts",
    "day06": "tsx src/day06.ts",
    "day07": "tsx src/day07.ts",
    "day11": "tsx src/day11.ts"
  },
  "keywords": [],
  "author": "Stanislav Schmidt",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "npx": "^10.2.2",
    "prettier": "3.7.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.0"
  },
  "prettier": {
    "printWidth": 120
  }
}
